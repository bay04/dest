<div class="row">
  <div id="clearance" class="password-reset large-6 medium-6 small-8 large-offset-3 medium-offset-3 small-offset-2  columns centered">
    <h2><%= t '.title' %></h2>
  
    <p><%= t '.description' %></p>
  
    <%= form_for :password_reset,
          url: user_password_path(@user, token: @user.confirmation_token),
          html: { method: :put } do |form| %>
      <div class="password-field">
        <%= form.label :password %>
        <%= form.password_field :password %>
      </div>
  
      <div class="submit-field">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>